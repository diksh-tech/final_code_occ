import React, { useState, useRef, useEffect } from 'react';
import './Chat.css';

const Chat = ({ messages, onSendMessage, isLoading }) => {
  const [inputMessage, setInputMessage] = useState('');
  const messagesEndRef = useRef(null);

  const scrollToBottom = () => {
    messagesEndRef.current?.scrollIntoView({ behavior: "smooth" });
  };

  useEffect(() => {
    scrollToBottom();
  }, [messages]);

  const handleSubmit = (e) => {
    e.preventDefault();
    if (inputMessage.trim() && !isLoading) {
      onSendMessage(inputMessage);
      setInputMessage('');
    }
  };

  const handleKeyPress = (e) => {
    if (e.key === 'Enter' && !e.shiftKey) {
      e.preventDefault();
      handleSubmit(e);
    }
  };

  const ToolExecutionBlock = ({ toolExecution }) => {
    return (
      <div className="tool-execution-block">
        <div className="tool-section">
          <div className="tool-title">üõ†Ô∏è Generating Tool</div>
          <div className="tool-result">{toolExecution.generatingTool}</div>
        </div>
        
        <div className="tool-section">
          <div className="tool-title">üìã Plan Tool</div>
          <div className="tool-result">{toolExecution.planTool}</div>
        </div>
        
        <div className="tool-section">
          <div className="tool-title">üìä Result</div>
          <div className="tool-result">{toolExecution.result}</div>
        </div>
        
        <div className="tool-section">
          <div className="tool-title">üìù Summarizing Result</div>
          <div className="tool-result">{toolExecution.summarizingResult}</div>
        </div>
        
        <div className={`status ${toolExecution.status.toLowerCase().replace(' ', '-')}`}>
          {toolExecution.status}
        </div>
      </div>
    );
  };

  return (
    <div className="chat-container">
      <div className="messages-container">
        {messages.length === 0 && (
          <div className="welcome-message">
            <h3>Welcome to AI Assistant!</h3>
            <p>Send a message to see tool execution results in a single block with timestamps.</p>
          </div>
        )}
        
        {messages.map((message) => (
          <div key={message.id} className={`message ${message.sender}-message`}>
            <div className="message-avatar">
              {message.sender === 'user' ? 'üë§' : 'ü§ñ'}
            </div>
            <div className="message-content">
              <div className="message-text">{message.text}</div>
              
              {message.toolExecution && (
                <ToolExecutionBlock toolExecution={message.toolExecution} />
              )}
              
              <div className="message-timestamp">
                {message.timestamp}
              </div>
            </div>
          </div>
        ))}
        
        {isLoading && (
          <div className="message bot-message">
            <div className="message-avatar">ü§ñ</div>
            <div className="message-content">
              <div className="loading-dots">
                <span></span>
                <span></span>
                <span></span>
              </div>
              <div className="message-timestamp">
                {new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' })}
              </div>
            </div>
          </div>
        )}
        
        <div ref={messagesEndRef} />
      </div>

      <form className="input-form" onSubmit={handleSubmit}>
        <div className="input-container">
          <input
            type="text"
            value={inputMessage}
            onChange={(e) => setInputMessage(e.target.value)}
            onKeyPress={handleKeyPress}
            placeholder="Type your message here..."
            disabled={isLoading}
            className="message-input"
          />
          <button 
            type="submit" 
            disabled={!inputMessage.trim() || isLoading}
            className="send-button"
          >
            Send
          </button>
        </div>
      </form>
    </div>
  );
};

export default Chat;
