import React, { useState, useRef, useEffect } from 'react';
import Chat from './Chat';
import './App.css';

function App() {
  const [messages, setMessages] = useState([]);
  const [isLoading, setIsLoading] = useState(false);
  const messagesEndRef = useRef(null);

  const scrollToBottom = () => {
    messagesEndRef.current?.scrollIntoView({ behavior: "smooth" });
  };

  useEffect(() => {
    scrollToBottom();
  }, [messages]);

  const handleSendMessage = async (messageText) => {
    const userMessage = {
      id: Date.now(),
      text: messageText,
      sender: 'user',
      timestamp: new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' })
    };

    setMessages(prev => [...prev, userMessage]);
    setIsLoading(true);

    // Simulate AI processing with tool execution
    setTimeout(() => {
      const botMessage = {
        id: Date.now() + 1,
        sender: 'bot',
        timestamp: new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }),
        toolExecution: {
          generatingTool: "Code analysis completed successfully",
          planTool: "Execution plan created with 3 phases",
          result: "All components processed without errors",
          summarizingResult: "Analysis complete. Summary generated with key insights",
          status: "Run Finished"
        },
        text: "I've processed your request. Here are the execution details:"
      };

      setMessages(prev => [...prev, botMessage]);
      setIsLoading(false);
    }, 2000);
  };

  return (
    <div className="app">
      <div className="app-header">
        <h1>AI Assistant</h1>
        <p>Smart tool execution with real-time results</p>
      </div>
      
      <div className="app-content">
        <Chat 
          messages={messages}
          onSendMessage={handleSendMessage}
          isLoading={isLoading}
        />
      </div>
    </div>
  );
}

export default App;
