import React, { useState, useRef, useEffect } from "react";
import MessageBubble from "./MessageBubble";

const AG_AGENT_ENDPOINT =
  import.meta.env.VITE_AGENT_ENDPOINT || "http://localhost:8001/agent";

export default function ChatPage() {
  const [messages, setMessages] = useState([
    {
      role: "assistant",
      content:
        "Hello! üëã I'm your FlightOps Agent. Ask me anything about flight operations ‚Äî delays, fuel, passengers, aircraft details, etc.",
      timestamp: new Date().toLocaleTimeString([], { hour: "2-digit", minute: "2-digit" }),
    },
  ]);

  const [input, setInput] = useState("");
  const [loading, setLoading] = useState(false);

  // UI state for the header/bubble hint (optional)
  const [phase, setPhase] = useState(""); // "thinking" | "processing" | "typing" | ""

  // --- streaming machinery ---
  const queueRef = useRef([]);                 // holds upcoming word tokens
  const typingTimerRef = useRef(null);         // setInterval handle
  const currentMsgIdRef = useRef(null);        // backend message.id for streaming
  const messagesEndRef = useRef(null);
  const abortRef = useRef(null);

  const scrollToBottom = () => messagesEndRef.current?.scrollIntoView({ behavior: "smooth" });
  useEffect(() => { scrollToBottom(); }, [messages]);

  // Start the word-by-word appender if not running
  const ensureTypingLoop = () => {
    if (typingTimerRef.current) return;
    typingTimerRef.current = setInterval(() => {
      if (queueRef.current.length === 0) return;

      const token = queueRef.current.shift(); // get next word/newline token
      setMessages(prev => {
        if (prev.length === 0) return prev;
        const last = prev[prev.length - 1];

        // we only append to the last assistant bubble
        if (last.role !== "assistant") return prev;

        // decide spacing: if token is newline or punctuation-leading, avoid extra space
        const needsSpace =
          token !== "\n" &&
          last.content &&
          !last.content.endsWith(" ") &&
          !/^[,.:;!?)]/.test(token);

        const nextContent =
          token === "\n"
            ? (last.content || "") + "\n"
            : (last.content || "") + (needsSpace ? " " : "") + token;

        const updated = { ...last, content: nextContent };
        return [...prev.slice(0, -1), updated];
      });
    }, 90); // typing speed (ms per token). Tune 60‚Äì140 as you like.
  };

  const stopTypingLoop = () => {
    if (typingTimerRef.current) {
      clearInterval(typingTimerRef.current);
      typingTimerRef.current = null;
    }
  };

  // Push new text into the queue as word tokens (keeping newlines)
  const enqueueDelta = (text) => {
    if (!text) return;
    const tokens = text
      .replace(/\r/g, "")
      .split(/(\s+)/)              // keep spaces as separate entries
      .filter(t => t.length > 0)   // drop empties
      .map(t => (t.trim() === "" ? "\n" : t.trim())); // collapse whitespace to newline tokens
    queueRef.current.push(...tokens);
  };

  async function sendMessage() {
    if (!input.trim()) return;

    const userMessage = {
      role: "user",
      content: input,
      timestamp: new Date().toLocaleTimeString([], { hour: "2-digit", minute: "2-digit" }),
    };
    setMessages(prev => [...prev, userMessage]);
    setInput("");
    setLoading(true);
    setPhase("thinking");
    queueRef.current = [];
    stopTypingLoop();
    currentMsgIdRef.current = null;

    const body = {
      thread_id: "thread-" + Date.now(),
      run_id: "run-" + Date.now(),
      messages: [userMessage],
      tools: [],
    };

    abortRef.current = new AbortController();

    try {
      const resp = await fetch(AG_AGENT_ENDPOINT, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(body),
        signal: abortRef.current.signal,
      });
      if (!resp.ok) throw new Error(await resp.text());

      const reader = resp.body.getReader();
      const decoder = new TextDecoder();
      let buf = "";

      while (true) {
        const { done, value } = await reader.read();
        if (done) break;
        buf += decoder.decode(value, { stream: true });

        let idx;
        while ((idx = buf.indexOf("\n\n")) !== -1) {
          const chunk = buf.slice(0, idx).trim();
          buf = buf.slice(idx + 2);

          for (const line of chunk.split("\n")) {
            if (!line.startsWith("data: ")) continue;
            const payload = line.slice(6).trim();
            if (!payload) continue;

            try {
              const evt = JSON.parse(payload);
              handleEvent(evt);
            } catch {
              console.warn("Bad SSE JSON:", payload);
            }
          }
        }
      }
    } catch (err) {
      setMessages(prev => [
        ...prev,
        {
          role: "assistant",
          content: "‚ö†Ô∏è Error: " + (err.message || "Unknown error"),
          timestamp: new Date().toLocaleTimeString([], { hour: "2-digit", minute: "2-digit" }),
        },
      ]);
    } finally {
      setLoading(false);
      setPhase("");
      stopTypingLoop();
      queueRef.current = [];
      currentMsgIdRef.current = null;
      abortRef.current = null;
    }
  }

  function handleEvent(event) {
    const ts = new Date().toLocaleTimeString([], { hour: "2-digit", minute: "2-digit" });

    switch (event.type) {
      case "STATE_UPDATE": {
        const p = (event.state?.phase || "").toLowerCase();
        if (p.includes("planning")) setPhase("thinking");
        else if (p.includes("running")) setPhase("processing");
        else if (p.includes("summarizing")) setPhase("typing");
        break;
      }

      case "TEXT_MESSAGE_CONTENT": {
        // Ignore backend status lines
        if (typeof event.content === "string") {
          const c = event.content.toLowerCase();
          if (c.includes("generating tool plan") || c.includes("summarizing results")) return;
        }

        // Streaming delta from adapter
        if (event.message?.delta) {
          const { id, delta } = event.message;

          // First delta for this message ‚Üí create assistant bubble, start typing loop
          if (!currentMsgIdRef.current || currentMsgIdRef.current !== id) {
            currentMsgIdRef.current = id;
            setMessages(prev => [
              ...prev,
              { role: "assistant", content: "", timestamp: ts },
            ]);
            setPhase("typing");
            queueRef.current = [];              // reset any old leftovers
            enqueueDelta(delta);
            ensureTypingLoop();
          } else {
            enqueueDelta(delta);
            ensureTypingLoop();
          }
        }
        // Non-stream final content (if backend sends one-shot)
        else if (event.message?.content) {
          stopTypingLoop();
          queueRef.current = [];
          setPhase("");
          setMessages(prev => [
            ...prev,
            { role: "assistant", content: event.message.content, timestamp: ts },
          ]);
        }
        break;
      }

      case "RUN_ERROR": {
        stopTypingLoop();
        queueRef.current = [];
        setPhase("");
        setMessages(prev => [
          ...prev,
          { role: "assistant", content: "‚ö†Ô∏è " + (event.error || "Run failed"), timestamp: ts },
        ]);
        break;
      }

      case "RUN_FINISHED": {
        stopTypingLoop();
        queueRef.current = [];
        setPhase("");
        break;
      }

      default:
        break;
    }
  }

  return (
    <div className="chat-container">
      <div className="messages-container">
        {messages.map((m, i) => (
          <MessageBubble key={i} role={m.role} content={m.content} timestamp={m.timestamp} />
        ))}

        {/* Optional thinking/processing/typing hint bubble */}
        {phase && (
          <div className="assistant-message thinking-bubble">
            <div className="message-content">
              {phase === "thinking" && <span>ü§î Thinking‚Ä¶</span>}
              {phase === "processing" && <span>‚öôÔ∏è Processing‚Ä¶</span>}
              {phase === "typing" && (
                <div className="loading-dots">
                  <span></span><span></span><span></span>
                </div>
              )}
            </div>
          </div>
        )}

        <div ref={messagesEndRef} />
      </div>

      <div className="input-container">
        <input
          type="text"
          className="message-input"
          placeholder="Ask about a flight, e.g. 'Why was 6E215 delayed on June 23, 2024?'"
          value={input}
          onChange={(e) => setInput(e.target.value)}
          onKeyDown={(e) => e.key === "Enter" && !loading && sendMessage()}
        />
        <button className="send-button" onClick={sendMessage} disabled={loading}>
          Send
        </button>
      </div>
    </div>
  );
}
#########################################

import React, { useState, useRef, useEffect } from "react";
import MessageBubble from "./MessageBubble";

const AG_AGENT_ENDPOINT =
  import.meta.env.VITE_AGENT_ENDPOINT || "http://localhost:8001/agent";

export default function ChatPage() {
  const [messages, setMessages] = useState([
    {
      role: "assistant",
      content:
        "Hello! üëã I'm your FlightOps Agent. Ask me anything about flight operations ‚Äî delays, fuel, passengers, aircraft details, etc.",
      timestamp: new Date().toLocaleTimeString([], {
        hour: "2-digit",
        minute: "2-digit",
      }),
    },
  ]);

  const [input, setInput] = useState("");
  const [loading, setLoading] = useState(false);
  const [thinkingPhase, setThinkingPhase] = useState(""); // thinking | processing | typing
  const [streamBuffer, setStreamBuffer] = useState(""); // stores streamed text buffer

  const messagesEndRef = useRef(null);
  const abortRef = useRef(null);
  const streamingMsgIdRef = useRef(null);
  const typingIntervalRef = useRef(null);

  const scrollToBottom = () => {
    messagesEndRef.current?.scrollIntoView({ behavior: "smooth" });
  };

  useEffect(() => {
    scrollToBottom();
  }, [messages, streamBuffer]);

  // stop interval safely
  function stopTypingStream() {
    if (typingIntervalRef.current) {
      clearInterval(typingIntervalRef.current);
      typingIntervalRef.current = null;
    }
  }

  async function sendMessage() {
    if (!input.trim()) return;

    const userMessage = {
      role: "user",
      content: input,
      timestamp: new Date().toLocaleTimeString([], {
        hour: "2-digit",
        minute: "2-digit",
      }),
    };
    setMessages((prev) => [...prev, userMessage]);
    setInput("");
    setLoading(true);
    setThinkingPhase("thinking");

    const body = {
      thread_id: "thread-" + Date.now(),
      run_id: "run-" + Date.now(),
      messages: [userMessage],
      tools: [],
    };

    abortRef.current = new AbortController();

    try {
      const resp = await fetch(AG_AGENT_ENDPOINT, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(body),
        signal: abortRef.current.signal,
      });

      if (!resp.ok) throw new Error(await resp.text());

      const reader = resp.body.getReader();
      const decoder = new TextDecoder();
      let buf = "";

      while (true) {
        const { done, value } = await reader.read();
        if (done) break;
        buf += decoder.decode(value, { stream: true });

        let idx;
        while ((idx = buf.indexOf("\n\n")) !== -1) {
          const chunk = buf.slice(0, idx).trim();
          buf = buf.slice(idx + 2);
          const lines = chunk.split("\n");

          for (const line of lines) {
            if (!line.startsWith("data: ")) continue;
            const payload = line.slice(6).trim();
            if (!payload) continue;

            try {
              const event = JSON.parse(payload);
              handleEvent(event);
            } catch {
              console.warn("Bad SSE:", payload);
            }
          }
        }
      }
    } catch (err) {
      setMessages((prev) => [
        ...prev,
        {
          role: "assistant",
          content: "‚ö†Ô∏è Error: " + (err.message || "Unknown error"),
          timestamp: new Date().toLocaleTimeString([], {
            hour: "2-digit",
            minute: "2-digit",
          }),
        },
      ]);
    } finally {
      setLoading(false);
      stopTypingStream();
      setThinkingPhase("");
      abortRef.current = null;
    }
  }

  function handleEvent(event) {
    const timestamp = new Date().toLocaleTimeString([], {
      hour: "2-digit",
      minute: "2-digit",
    });

    switch (event.type) {
      case "STATE_UPDATE": {
        const phase = event.state?.phase;
        if (phase?.includes("planning")) setThinkingPhase("thinking");
        else if (phase?.includes("running")) setThinkingPhase("processing");
        else if (phase?.includes("summarizing")) setThinkingPhase("typing");
        break;
      }

      case "TEXT_MESSAGE_CONTENT": {
        // ignore backend plain ‚ÄúGenerating tool plan‚Ä¶‚Äù etc.
        if (event.content?.toLowerCase().includes("generating")) return;
        if (event.content?.toLowerCase().includes("summarizing")) return;

        // delta streaming
        if (event.message?.delta) {
          setThinkingPhase("typing");
          const { id, delta } = event.message;

          // accumulate in buffer
          setStreamBuffer((prev) => prev + delta);

          // if first delta ‚Üí create new assistant bubble
          if (!streamingMsgIdRef.current || streamingMsgIdRef.current !== id) {
            streamingMsgIdRef.current = id;

            setMessages((prev) => [
              ...prev,
              { role: "assistant", content: "", timestamp },
            ]);

            // start typing animation interval (0.03 sec per char)
            stopTypingStream();
            typingIntervalRef.current = setInterval(() => {
              setMessages((prev) => {
                if (!streamBuffer) return prev;
                const last = prev[prev.length - 1];
                if (!last || last.role !== "assistant") return prev;
                const nextChar = streamBuffer[0];
                setStreamBuffer((s) => s.slice(1)); // remove from buffer
                const updated = {
                  ...last,
                  content: (last.content || "") + nextChar,
                };
                return [...prev.slice(0, -1), updated];
              });
            }, 20); // <- control speed (20ms = smooth typing)
          }
        }

        // final message (non-delta)
        else if (event.message?.content) {
          stopTypingStream();
          setStreamBuffer("");
          setThinkingPhase("");
          setMessages((prev) => [
            ...prev,
            { role: "assistant", content: event.message.content, timestamp },
          ]);
        }
        break;
      }

      case "RUN_FINISHED": {
        stopTypingStream();
        setThinkingPhase("");
        streamingMsgIdRef.current = null;
        setStreamBuffer("");
        break;
      }

      default:
        break;
    }
  }

  return (
    <div className="chat-container">
      <div className="messages-container">
        {messages.map((msg, idx) => (
          <MessageBubble
            key={idx}
            role={msg.role}
            content={msg.content}
            timestamp={msg.timestamp}
          />
        ))}

        {/* Thinking / Processing / Typing bubble */}
        {thinkingPhase && (
          <div className="assistant-message thinking-bubble">
            <div className="message-content">
              {thinkingPhase === "thinking" && <span>ü§î Thinking...</span>}
              {thinkingPhase === "processing" && <span>‚öôÔ∏è Processing...</span>}
              {thinkingPhase === "typing" && (
                <div className="typing-dots">
                  <span></span>
                  <span></span>
                  <span></span>
                </div>
              )}
            </div>
          </div>
        )}

        <div ref={messagesEndRef} />
      </div>

      <div className="input-container">
        <input
          type="text"
          className="message-input"
          placeholder="Ask about a flight, e.g. 'Why was 6E215 delayed on June 23, 2024?'"
          value={input}
          onChange={(e) => setInput(e.target.value)}
          onKeyDown={(e) => e.key === "Enter" && !loading && sendMessage()}
        />
        <button onClick={sendMessage} className="send-button" disabled={loading}>
          Send
        </button>
      </div>
    </div>
  );
}
######################################

import React, { useState, useRef, useEffect } from "react";
import MessageBubble from "./MessageBubble";

const AG_AGENT_ENDPOINT =
  import.meta.env.VITE_AGENT_ENDPOINT || "http://localhost:8001/agent";

export default function ChatPage() {
  const [messages, setMessages] = useState([
    {
      role: "assistant",
      content:
        "Hello! üëã I'm your FlightOps Agent. Ask me anything about flight operations ‚Äî delays, fuel, passengers, aircraft details, etc.",
      timestamp: new Date().toLocaleTimeString([], {
        hour: "2-digit",
        minute: "2-digit",
      }),
    },
  ]);

  const [input, setInput] = useState("");
  const [loading, setLoading] = useState(false);
  const [thinkingPhase, setThinkingPhase] = useState(""); // "thinking" | "processing" | "typing"

  const messagesEndRef = useRef(null);
  const abortRef = useRef(null);
  const streamingMsgIdRef = useRef(null);

  const scrollToBottom = () => {
    messagesEndRef.current?.scrollIntoView({ behavior: "smooth" });
  };

  useEffect(() => {
    scrollToBottom();
  }, [messages]);

  async function sendMessage() {
    if (!input.trim()) return;

    const userMessage = {
      role: "user",
      content: input,
      timestamp: new Date().toLocaleTimeString([], {
        hour: "2-digit",
        minute: "2-digit",
      }),
    };
    setMessages((prev) => [...prev, userMessage]);
    setInput("");
    setLoading(true);
    setThinkingPhase("thinking"); // start with thinking

    const body = {
      thread_id: "thread-" + Date.now(),
      run_id: "run-" + Date.now(),
      messages: [userMessage],
      tools: [],
    };

    abortRef.current = new AbortController();

    try {
      const resp = await fetch(AG_AGENT_ENDPOINT, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(body),
        signal: abortRef.current.signal,
      });

      if (!resp.ok) {
        const errTxt = await resp.text();
        throw new Error(errTxt);
      }

      const reader = resp.body.getReader();
      const decoder = new TextDecoder();
      let buf = "";

      while (true) {
        const { done, value } = await reader.read();
        if (done) break;
        buf += decoder.decode(value, { stream: true });

        let idx;
        while ((idx = buf.indexOf("\n\n")) !== -1) {
          const chunk = buf.slice(0, idx).trim();
          buf = buf.slice(idx + 2);
          const lines = chunk.split("\n");

          for (const line of lines) {
            if (!line.startsWith("data: ")) continue;
            const payload = line.slice(6).trim();
            if (!payload) continue;

            try {
              const event = JSON.parse(payload);
              handleEvent(event);
            } catch {
              console.warn("Bad SSE line:", payload);
            }
          }
        }
      }
    } catch (err) {
      setMessages((prev) => [
        ...prev,
        {
          role: "assistant",
          content: "‚ö†Ô∏è Error: " + err.message,
          timestamp: new Date().toLocaleTimeString([], {
            hour: "2-digit",
            minute: "2-digit",
          }),
        },
      ]);
    } finally {
      setLoading(false);
      setThinkingPhase("");
      abortRef.current = null;
    }
  }

  function handleEvent(event) {
    const timestamp = new Date().toLocaleTimeString([], {
      hour: "2-digit",
      minute: "2-digit",
    });

    switch (event.type) {
      case "STATE_UPDATE": {
        const phase = event.state?.phase;
        if (phase?.includes("planning")) setThinkingPhase("thinking");
        else if (phase?.includes("running")) setThinkingPhase("processing");
        else if (phase?.includes("summarizing")) setThinkingPhase("typing");
        break;
      }

      case "TEXT_MESSAGE_CONTENT": {
        // ignore planning/summarizing text from backend
        if (event.content?.toLowerCase().includes("generating")) return;
        if (event.content?.toLowerCase().includes("summarizing")) return;

        if (event.message?.delta) {
          setThinkingPhase("typing"); // show typing animation
          const { id, delta } = event.message;
          if (!streamingMsgIdRef.current || streamingMsgIdRef.current !== id) {
            streamingMsgIdRef.current = id;
            setMessages((prev) => [
              ...prev,
              { role: "assistant", content: delta, timestamp },
            ]);
          } else {
            setMessages((prev) => {
              const last = prev[prev.length - 1];
              if (last.role !== "assistant") return prev;
              const updated = {
                ...last,
                content: (last.content || "") + delta,
              };
              return [...prev.slice(0, -1), updated];
            });
          }
        } else if (event.message?.content) {
          setThinkingPhase(""); // stop typing when done
          setMessages((prev) => [
            ...prev,
            { role: "assistant", content: event.message.content, timestamp },
          ]);
        }
        break;
      }

      case "RUN_FINISHED": {
        setThinkingPhase(""); // done
        streamingMsgIdRef.current = null;
        break;
      }

      default:
        break;
    }
  }

  return (
    <div className="chat-container">
      <div className="messages-container">
        {messages.map((msg, idx) => (
          <MessageBubble
            key={idx}
            role={msg.role}
            content={msg.content}
            timestamp={msg.timestamp}
          />
        ))}

        {/* Thinking / Processing / Typing bubble */}
        {thinkingPhase && (
          <div className="assistant-message thinking-bubble">
            <div className="message-content">
              {thinkingPhase === "thinking" && <span>ü§î Thinking...</span>}
              {thinkingPhase === "processing" && <span>‚öôÔ∏è Processing...</span>}
              {thinkingPhase === "typing" && (
                <div className="typing-dots">
                  <span></span>
                  <span></span>
                  <span></span>
                </div>
              )}
            </div>
          </div>
        )}

        <div ref={messagesEndRef} />
      </div>

      <div className="input-container">
        <input
          type="text"
          className="message-input"
          placeholder="Ask about a flight, e.g. 'Why was 6E215 delayed on June 23, 2024?'"
          value={input}
          onChange={(e) => setInput(e.target.value)}
          onKeyDown={(e) => e.key === "Enter" && !loading && sendMessage()}
        />
        <button
          onClick={sendMessage}
          className="send-button"
          disabled={loading}
        >
          Send
        </button>
      </div>
    </div>
  );
}
################################################
.thinking-bubble .typing-dots {
  display: flex;
  gap: 6px;
  justify-content: flex-start;
  align-items: center;
  padding: 8px 12px;
}

.typing-dots span {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: #6b7280;
  animation: bounce 1.2s infinite ease-in-out;
}

.typing-dots span:nth-child(1) { animation-delay: 0s; }
.typing-dots span:nth-child(2) { animation-delay: 0.2s; }
.typing-dots span:nth-child(3) { animation-delay: 0.4s; }

@keyframes bounce {
  0%, 80%, 100% { transform: scale(0.8); opacity: 0.5; }
  40% { transform: scale(1); opacity: 1; }
}
#############################################

import React from "react";

export default function MessageBubble({ role, content, timestamp }) {
  return (
    <div className={`message ${role}-message`}>
      <div className="message-content">
        <div className="message-text">{content}</div>
        <div className="message-timestamp">{timestamp}</div>
      </div>
    </div>
  );
}
########################################

// src/components/ChatPage.jsx
import React, { useState, useRef, useEffect, useMemo } from "react";
import MessageBubble from "./MessageBubble";

const AG_AGENT_ENDPOINT =
  import.meta.env.VITE_AGENT_ENDPOINT || "http://localhost:8001/agent";

export default function ChatPage() {
  const [messages, setMessages] = useState([
    {
      role: "assistant",
      content:
        "Hello! üëã I'm your FlightOps Agent. Ask me anything about flight operations ‚Äî delays, fuel, passengers, aircraft details, etc.",
      timestamp: new Date().toLocaleTimeString([], { hour: "2-digit", minute: "2-digit" }),
    },
  ]);

  const [input, setInput] = useState("");
  const [loading, setLoading] = useState(false);

  // Stream/Run state
  const [phase, setPhase] = useState("idle"); // idle | planning | running tools | summarizing | finished
  const [progress, setProgress] = useState(0);
  const [isTyping, setIsTyping] = useState(false); // true while assistant delta chunks are arriving

  const messagesEndRef = useRef(null);
  const abortRef = useRef(null);
  const streamingMsgIdRef = useRef(null);
  const typingTimeoutRef = useRef(null);

  // UI helpers
  const statusText = useMemo(() => {
    if (isTyping) return "typing‚Ä¶";
    if (phase === "planning") return "thinking‚Ä¶";
    if (phase === "running tools") return "processing‚Ä¶";
    if (phase === "summarizing") return "summarizing‚Ä¶";
    if (phase === "finished") return "finished";
    return null;
  }, [phase, isTyping]);

  const showStatusStrip = useMemo(() => {
    return statusText && statusText !== "finished";
  }, [statusText]);

  const scrollToBottom = () => {
    messagesEndRef.current?.scrollIntoView({ behavior: "smooth" });
  };

  useEffect(() => {
    scrollToBottom();
  }, [messages, isTyping]);

  // small helper to stop typing state safely (with slight debounce so it feels natural)
  const stopTypingSoon = (delayMs = 250) => {
    clearTimeout(typingTimeoutRef.current);
    typingTimeoutRef.current = setTimeout(() => setIsTyping(false), delayMs);
  };

  async function sendMessage() {
    if (!input.trim()) return;

    const userMessage = {
      role: "user",
      content: input.trim(),
      timestamp: new Date().toLocaleTimeString([], { hour: "2-digit", minute: "2-digit" }),
    };
    setMessages((prev) => [...prev, userMessage]);

    // reset run state
    setInput("");
    setLoading(true);
    setPhase("planning");
    setProgress(5);
    setIsTyping(false);
    streamingMsgIdRef.current = null;
    clearTimeout(typingTimeoutRef.current);

    const body = {
      thread_id: "thread-" + Date.now(),
      run_id: "run-" + Date.now(),
      messages: [{ role: "user", content: userMessage.content }],
      tools: [],
    };

    abortRef.current = new AbortController();

    try {
      const resp = await fetch(AG_AGENT_ENDPOINT, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(body),
        signal: abortRef.current.signal,
      });

      if (!resp.ok) {
        const errTxt = await resp.text();
        throw new Error(errTxt || "Request failed");
      }

      const reader = resp.body.getReader();
      const decoder = new TextDecoder();
      let buf = "";

      while (true) {
        const { done, value } = await reader.read();
        if (done) break;

        buf += decoder.decode(value, { stream: true });

        // split SSE chunks by blank line
        let idx;
        while ((idx = buf.indexOf("\n\n")) !== -1) {
          const raw = buf.slice(0, idx).trim();
          buf = buf.slice(idx + 2);

          const lines = raw.split("\n");
          for (const line of lines) {
            if (!line.startsWith("data: ")) continue;
            const payload = line.slice(6).trim();
            if (!payload) continue;
            try {
              const event = JSON.parse(payload);
              handleEvent(event);
            } catch {
              // ignore bad line
            }
          }
        }
      }
    } catch (err) {
      setMessages((prev) => [
        ...prev,
        {
          role: "assistant",
          content: "‚ö†Ô∏è Error: " + (err?.message || "Unknown error"),
          timestamp: new Date().toLocaleTimeString([], { hour: "2-digit", minute: "2-digit" }),
        },
      ]);
    } finally {
      setLoading(false);
      abortRef.current = null;
      stopTypingSoon(400);
    }
  }

  function handleEvent(event) {
    const timestamp = new Date().toLocaleTimeString([], { hour: "2-digit", minute: "2-digit" });

    switch (event.type) {
      case "RUN_STARTED":
        setPhase("planning");
        setProgress(10);
        break;

      case "STATE_UPDATE": {
        const st = event.state || {};
        if (typeof st.phase === "string") setPhase(st.phase);
        if (typeof st.progress_pct === "number") {
          const pct = Math.max(0, Math.min(100, st.progress_pct));
          setProgress(pct);
        }
        break;
      }

      case "STATE_SNAPSHOT":
        // plan/results available if you want to render a side drawer; we ignore in chat.
        break;

      case "TOOL_CALL_START":
        // running tools phase begins (adapter ‡§≠‡•Ä STATE_UPDATE ‡§≠‡•á‡§ú‡§§‡§æ ‡§π‡•à)
        break;

      case "TOOL_CALL_RESULT":
        // tool outputs ‡§ï‡•ã UI ‡§¨‡§¨‡§≤ ‡§Æ‡•á‡§Ç ‡§®‡§π‡•Ä‡§Ç ‡§¶‡§ø‡§ñ‡§æ ‡§∞‡§π‡•á ‚Äî ‡§∏‡§æ‡§´‡§º UX
        break;

      case "TEXT_MESSAGE_CONTENT": {
        // We only care about streaming deltas or final assistant content
        // Ignore event.content (status strings like "Generating tool plan...")
        if (event.message?.delta) {
          const { id, delta } = event.message;
          setIsTyping(true);

          if (!streamingMsgIdRef.current || streamingMsgIdRef.current !== id) {
            // new streamed assistant message
            streamingMsgIdRef.current = id;
            setMessages((prev) => [
              ...prev,
              { role: "assistant", content: delta, timestamp },
            ]);
          } else {
            // append delta to the last assistant message
            setMessages((prev) => {
              const last = prev[prev.length - 1];
              if (!last || last.role !== "assistant") {
                return [...prev, { role: "assistant", content: delta, timestamp }];
              }
              const updated = { ...last, content: (last.content || "") + delta };
              return prev.slice(0, -1).concat(updated);
            });
          }

          // keep typing true while chunks arrive; if gap occurs, stop after small delay
          stopTypingSoon(900);
        } else if (event.message?.content) {
          // non-streamed final text (fallback path)
          setMessages((prev) => [
            ...prev,
            { role: "assistant", content: event.message.content, timestamp },
          ]);
          stopTypingSoon(600);
        }
        break;
      }

      case "SUMMARY": {
        // If adapter sends a final summary object (rare now)
        const text =
          typeof event.summary === "string"
            ? event.summary
            : event.summary?.summary || "";
        if (text) {
          setMessages((prev) => [
            ...prev,
            { role: "assistant", content: text, timestamp },
          ]);
        }
        stopTypingSoon(600);
        break;
      }

      case "RUN_FINISHED":
        setPhase("finished");
        setProgress(100);
        streamingMsgIdRef.current = null;
        stopTypingSoon(400);
        break;

      case "RUN_ERROR":
        setPhase("finished");
        setProgress(100);
        streamingMsgIdRef.current = null;
        setMessages((prev) => [
          ...prev,
          { role: "assistant", content: "‚ö†Ô∏è " + (event.error || "Run failed"), timestamp },
        ]);
        stopTypingSoon(200);
        break;

      default:
        // ignore HEARTBEAT / TOOL_CALL_END etc.
        break;
    }
  }

  return (
    <div className="chat-container">
      {/* Top status strip for thinking / processing / typing */}
      {showStatusStrip && (
        <div
          className="run-header"
          style={{
            display: "flex",
            alignItems: "center",
            gap: 12,
            padding: "8px 14px",
            background: "#ffffff",
            borderBottom: "1px solid #e5e7eb",
          }}
        >
          <span
            style={{
              fontSize: 12,
              fontWeight: 600,
              textTransform: "uppercase",
              color: "#4f46e5",
              letterSpacing: 0.6,
            }}
          >
            {statusText}
          </span>

          <div
            className="progress-bar"
            style={{
              flex: 1,
              height: 6,
              borderRadius: 999,
              background: "#eef2ff",
              overflow: "hidden",
            }}
          >
            <div
              className="progress"
              style={{
                height: "100%",
                width: `${progress}%`,
                background:
                  "linear-gradient(90deg, #4f46e5 0%, #7c3aed 100%)",
                transition: "width 180ms linear",
              }}
            />
          </div>

          {isTyping && (
            <div className="loading-dots" style={{ padding: "6px 10px" }}>
              <span></span>
              <span></span>
              <span></span>
            </div>
          )}
        </div>
      )}

      <div className="messages-container">
        {messages.map((msg, idx) => (
          <MessageBubble
            key={idx}
            role={msg.role}
            content={msg.content}
            timestamp={msg.timestamp}
          />
        ))}

        {/* Fallback typing indicator inside list (in case status strip hidden) */}
        {!showStatusStrip && isTyping && (
          <div className="loading-message">
            <div className="loading-dots">
              <span></span>
              <span></span>
              <span></span>
            </div>
          </div>
        )}

        <div ref={messagesEndRef} />
      </div>

      <div className="input-container">
        <input
          type="text"
          className="message-input"
          placeholder="Ask about a flight, e.g. 'Why was 6E215 delayed on June 23, 2024?'"
          value={input}
          onChange={(e) => setInput(e.target.value)}
          onKeyDown={(e) => e.key === "Enter" && !loading && sendMessage()}
        />
        <button onClick={sendMessage} className="send-button" disabled={loading}>
          Send
        </button>
      </div>
    </div>
  );
}
